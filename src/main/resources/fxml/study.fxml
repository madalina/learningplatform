<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
  <children>
    <VBox id="VBox" fx:id="content" alignment="CENTER" spacing="5.0">
      <children>
        <TextArea fx:id="front" editable="false" prefWidth="200.0" styleClass="note-preview" wrapText="true" />
        <HBox id="HBox" alignment="CENTER" spacing="5.0">
          <children>
            <Button fx:id="btn" mnemonicParsing="false" onAction="#showBack" text="Show back" />
            <Button id="btn" mnemonicParsing="false" onAction="#showNextNote" text="NEXT" />
          </children>
        </HBox>
        <TextArea fx:id="back" editable="false" prefWidth="200.0" styleClass="note-preview" wrapText="true" />
        <HBox id="HBox" alignment="CENTER" spacing="5.0">
          <children>
            <Button id="btn" mnemonicParsing="false" onAction="#showNextNote" text="Learned (1)" />
            <Button id="btn" mnemonicParsing="false" text="Remind me in 5 minutes (2)" />
            <Button id="btn" mnemonicParsing="false" text="Remind me by email (3)" />
          </children>
          <padding>
            <Insets bottom="10.0" />
          </padding>
        </HBox>
        <HBox id="HBox" alignment="CENTER" spacing="5.0" />
      </children>
    </VBox>
  </children>
  <stylesheets>
    <URL value="@../styles/styles.css" />
  </stylesheets>
</fx:root>
