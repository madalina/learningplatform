<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import org.tbee.javafx.scene.layout.fxml.MigPane?>
<?import layouttests.migfxml.sample1.*?>

<MigPane id="rootPane" fx:controller="com.madi.learningplatform.controller.LoginScreenController"
        styleClass="main-panel"
        layout="insets 20"
        cols="[label, pref!][grow, 50::]"
        rows=""
        xmlns:fx="http://javafx.com/fxml">

    <Label text="Username:" />  <TextField fx:id="usernameField" prefColumnCount="30" MigPane.cc="growx, wrap" onAction="#login" />
    <Label text="Password:" />	<PasswordField fx:id="passwordField" prefColumnCount="30" MigPane.cc="growx, wrap" onAction="#login" />

    <Button text="Login" onAction="#login" MigPane.cc="skip, gap :push, gaptop 15, wrap" />

    <Label fx:id="messageLabel" styleClass="hello-message" MigPane.cc="span, growx, gaptop 15" />

</MigPane >