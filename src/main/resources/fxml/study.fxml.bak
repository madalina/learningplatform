<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<fx:root type="javafx.scene.layout.AnchorPane" xmlns:fx="http://javafx.com/fxml">
  <children>
    <VBox id="VBox" fx:id="content" alignment="CENTER" spacing="5.0">
      <children>
        <TextArea fx:id="front" editable="false" maxHeight="250.0" maxWidth="400.0" prefHeight="250.0" prefWidth="400.0" styleClass="note-preview" wrapText="true" />
        <HBox id="HBox" alignment="CENTER" spacing="5.0">
          <children>
            <Button fx:id="btnShowAnswer" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#showAnswer" text="Show answer" textAlignment="CENTER" />
          </children>
        </HBox>
        <TextArea fx:id="back" editable="false" maxHeight="250.0" maxWidth="400.0" prefHeight="250.0" prefWidth="400.0" styleClass="note-preview" wrapText="true" />
        <HBox id="HBox" alignment="CENTER" spacing="5.0">
          <children>
            <Button id="btn" fx:id="btnRepeat" contentDisplay="CENTER" mnemonicParsing="false" onAction="#showNextNote" text="Remind me soon (1)" />
            <Button id="btn" fx:id="btnRepeatLater" mnemonicParsing="false" text="Remind me later (2)" />
            <Button id="btn" fx:id="btnLearned" mnemonicParsing="false" text="Learned (3)" />
          </children>
          <padding>
            <Insets bottom="10.0" />
          </padding>
        </HBox>
        <HBox id="HBox" alignment="CENTER" spacing="5.0" />
      </children>
    </VBox>
  </children>
  <stylesheets>
    <URL value="@../styles/styles.css" />
  </stylesheets>
</fx:root>
